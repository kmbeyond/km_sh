

#vi run_background.sh

touch run_background.log
echo "--START--" >> run_background.log

echo "$(date +'%Y%m%d_%H%M%S')" >> run_background.log
sleep 30
echo "$(date +'%Y%m%d_%H%M%S')" >> run_background.log

sleep 30
echo "$(date +'%Y%m%d_%H%M%S')" >> run_background.log
sleep 30
echo "$(date +'%Y%m%d_%H%M%S')" >> run_background.log

echo "--COMPLETE--" >> run_background.log


#give permisions
chmod 775 run_background.sh

#run it
#nohup run_background.sh > /dev/null 2>&1 &
